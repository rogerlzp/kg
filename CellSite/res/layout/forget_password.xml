<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd"
    android:clickable="true"
    android:onClick="OnCloseSoftKeyboard"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/titleLayoutId"
        style="@style/titleLayout" >

        <TextView
            style="@style/return_button"
            android:layout_width="80dp"
            android:layout_height="48dp" />

        <TextView
            style="@style/titleTextView"
            android:text="@string/forgotten_password" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/titleLayoutId"
        android:orientation="vertical"
        android:padding="10dp" >

        <EditText
            android:id="@+id/forgetPassword_tv"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/shape_milkwhite_circlecorner"
            android:gravity="left|center_vertical"
            android:hint="@string/login_username_hint"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#000000"
            android:textSize="18dp" />

        
        <TextView
            android:id="@+id/forget_Password"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/hovered_stroke_white2deepblue"
            android:clickable="true"
            android:gravity="center"
            android:onClick="OnForgetPassword"
            android:text="@string/submissionChange"
            android:textColor="#000000"
            android:textSize="18dp" >
        </TextView>
    </LinearLayout>

</RelativeLayout>