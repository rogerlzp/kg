<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd" >

    <LinearLayout
        android:id="@+id/loginLayout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:clickable="true"
        android:onClick="OnCloseSoftKeyboard"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="104dp"
                android:text="@string/app_name"
                android:textColor="#4f5555"
                android:textSize="22dp" />

            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="137dp"
                android:layout_height="83dp"
                android:layout_alignRight="@+id/textView1"
                android:layout_centerVertical="true"
                android:layout_marginRight="41dp"
                android:src="@drawable/mascot11" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15.0dip" >

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/shape_milkwhite_upside_circlecorner"
                android:hint="@string/login_username_hint"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@+id/username"
                android:layout_marginBottom="15dp"
                android:background="@drawable/shape_milkwhite_downside_circlecorner"
                android:hint="@string/login_password_hint"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:password="true"
                android:singleLine="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/forget_password"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onForgetPassword"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/forgotten_password"
            android:textColor="#009ad6" />

        <LinearLayout
            android:id="@+id/other_login_mode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical"
            android:padding="15dp" >

            <Button
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:background="@drawable/hovered_stroke_white2deepblue"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onLogin"
                android:text="@string/login_label_signin" />


        </LinearLayout>
    </LinearLayout>

</ScrollView>