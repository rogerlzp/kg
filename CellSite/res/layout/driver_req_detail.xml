<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/title_bar"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tvPartyTitle"
            style="@style/return_button"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/driver_detail"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="5px"
        android:background="#aaaaaa" />

    <RelativeLayout
        android:id="@+id/driver_detail"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/driver_portrait_iv"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/user_dp" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/driver_portrait_iv"
            android:text="@string/driver"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/truck_license_tv"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_below="@id/name_tv"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/driver_portrait_iv"
            android:text="@string/plate_number"
            android:textSize="16sp" >
        </TextView>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="5px"
        android:background="#aaaaaa" />

    <RelativeLayout
        android:id="@+id/truck_detail"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/truck_image_iv"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/user_dp" />

        <TextView
            android:id="@+id/truck_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/truck_image_iv"
            android:text="@string/truck_type"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/truck_length_tv"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_below="@id/truck_type_tv"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/truck_image_iv"
            android:text="@string/truck_length"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/truck_weight_tv"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_below="@id/truck_length_tv"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/truck_image_iv"
            android:text="@string/plate_number"
            android:textSize="16sp" >
        </TextView>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="5px"
        android:background="#aaaaaa" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="评价"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="5px"
        android:background="#aaaaaa" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp "
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/contact_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:onClick="contactDriver"
            android:layout_weight="1"
            android:text="@string/contact" />

        <Button
             android:id="@+id/confirm_driver_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
             android:onClick="confirmDriver"
            android:layout_weight="1"
            android:text="@string/confirm_driver" />
    </LinearLayout>

</LinearLayout>