<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="vertical" android:background="#ffffff">

	<RelativeLayout android:id="@+id/titleLayout" style="@style/titleLayout">
		<TextView style="@style/return_button" android:layout_width="80dp"
			android:layout_height="48dp" />
		<TextView android:id="@+id/aboutTitleTop" style="@style/titleTextView"
			android:text="@string/about" />
	</RelativeLayout>

	<ImageView android:id="@+id/logo" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:src="@drawable/mascot11"
		android:layout_below="@+id/titleLayout" android:layout_marginLeft="10dp" />

	<LinearLayout android:id="@+id/versionLayout"
		android:layout_width="match_parent" android:layout_height="48dp"
		android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
		android:background="@drawable/shape_milkwhite_upside_circlecorner"
		android:onClick="OnVersion" android:clickable="true"
		android:orientation="horizontal">

		<TextView android:id="@+id/tvVersionTitle"
			android:layout_width="90dp" android:layout_height="match_parent"
			android:text="@string/version" style="@style/settings_textview"
			android:gravity="left|center_vertical" android:textColor="#4f5555" />

		<TextView android:id="@+id/tvVersionCode"
			android:layout_width="match_parent" android:layout_height="match_parent"

			style="@style/settings_textview" android:layout_marginRight="10dp"
			android:layout_weight="1" android:textColor="#4f5555" />
	</LinearLayout>
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="48dp" android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:background="@drawable/shape_milkwhite_downside_circlecorner">
		<TextView android:layout_width="90dp" android:layout_height="match_parent"
			style="@style/settings_textview" android:text="@string/officialQQ"
			android:textColor="#4f5555" />

		<TextView android:id="@+id/qqcode" android:layout_width="match_parent"
			android:layout_height="match_parent" style="@style/settings_textview"
			android:text="@string/officialQQcode" android:layout_marginRight="10dp"
			android:layout_weight="1" android:textColor="#4f5555" />
	</LinearLayout>

</LinearLayout>