<?xml version="1.0" encoding="UTF-8"?>  
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true"  android:drawable="@drawable/hover_deep_green_right_circlecorner" />
  <item android:state_checked="true" android:drawable="@drawable/hover_deep_green_right_circlecorner" />
 <item android:state_pressed="false" >
        <shape> 
           <gradient 
            		    android:startColor="#ffffff" android:endColor="#aaaaaa"
            			android:angle="270" />
        	<stroke  
        		android:width="1px"  
        		android:color="#a1a3a6" />
        	
        <corners  android:topLeftRadius="0dp" android:topRightRadius="10dp"
        		android:bottomLeftRadius="10dp" android:bottomRightRadius="0dp" />
        </shape> 
    </item>
  
 <item android:state_checked="false" >
        <shape> 
                          <gradient 
            		    android:startColor="#ffffff" android:endColor="#aaaaaa"
            			android:angle="270" />
        	<stroke  
        		android:width="1px"  
        		android:color="#a1a3a6" />
        	
        <corners  android:topLeftRadius="0dp" android:topRightRadius="10dp"
        		android:bottomLeftRadius="10dp" android:bottomRightRadius="0dp" />
        </shape> 
    </item>

</selector> 